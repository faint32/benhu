  <script>
$(function(){
  setInterval(function(){
      $(".countDown").each(function(){
        var obj = $(this);
        var endTime = new Date(parseInt(obj.attr('value')) * 1000);
        var show_day =  obj.attr('showday');
        var nowTime = new Date();
      //  alert('endTime=='+endTime);
    //    alert('nowTime=='+nowTime);
        var nMS=endTime.getTime() - nowTime.getTime() + 28800000;
        var myD=Math.floor(nMS/(1000 * 60 * 60 * 24));
        var myH_show=Math.floor(nMS/(1000*60*60) % 24);
        var myH=Math.floor(nMS/(1000*60*60));
        var myM=Math.floor(nMS/(1000*60)) % 60;
        var myS=Math.floor(nMS/1000) % 60;
        var myMS=Math.floor(nMS/100) % 10;
        if(nMS>0)
        {
                 if(this.className=="grouptab_time countDown notSta")   
                {var str =  '倒计时：'+myD+'天'+myH_show+'时'+myM+'分'+myS+'秒'; }
                else if(this.className=="grouptab_hovermain_time countDown" || this.className=="grouptab_time countDown")
                  {var str = '剩余时间：'+myD+'天'+myH_show+'时'+myM+'分'+myS+'秒';       }                 
        }
        else
        {  
              if(this.className=="grouptab_time countDown notSta")   //到计时结束，未开始的团购活动-->开始
              {
                  var str = "已开始！";
                  var _parentDiv = $(this).parent().parent(); 
                  var notStaDiv = _parentDiv.children(".group_weikai");
                  var aDiv = _parentDiv.find(".good_url");
                  var url = aDiv.attr('href');
                  notStaDiv.empty();
                  notStaDiv.attr('class','grouptab_hovermain');
                  var elem="<div class='grouptab_hovermain_time'>团购开始了！</div><a href='"+url+"'></a>";
                  notStaDiv.append(elem);          
                 
                   this.className="grouptab_time";
              
              }
              else if(this.className=="grouptab_hovermain_time countDown")                                                 //到计时结束，已开始的团购活动-->结束
              {
                var str = "已结束！"; 
              //  if(this.className=="grouptab_hovermain_time countDown")
                 //  {                      
                    var _parentDiv = $(this).parent();      
                    _parentDiv.attr('class','group_maiguang');
                      _parentDiv.empty();  
                      _parentDiv.append("<img width='118 'height='59' src='themes/yihaodian/images/group_maiguang.png'>");          
                //   }
               }
                if(this.className=="grouptab_time countDown")      //无论哪种情况，都不再计时
                   {
                     this.className="grouptab_time";
                   }
        }
    obj.html(str);
      });
    }, 100);  

})
function group_buy_ch( group_type)
{
  var param='act=change&group_type='+group_type;
     Ajax.call( 'group_buy.php',param,group_buy_ch_callback , 'GET', 'json', true, true );
}
function group_buy_ch_callback(result)
{

  if ( result[0] == 'today'  )
  {
    change_group_buy(result[1],'#group_tab_main0');
    change_group_buy(result[2],'#group_tab_main1');
  }
  else if(result[0] == 'brand')
  {
      change_group_buy(result[1],'#group_tab_main_a0');
      change_group_buy(result[2],'#group_tab_main_a1');
  }
  else if(result[0] == 'not_start')
  {
      change_group_buy(result[1],'#group_tab_main_b0');
      change_group_buy(result[2],'#group_tab_main_b1');
  }
  else
  {
    alert('false');
  }
}

function change_group_buy(jsonData,id)
{

  var str='';
  var ele='';
   for (var i = 0; i < jsonData.length; i++) {
     
	if(id == '#group_tab_main_b0' || id ==  '#group_tab_main_b1')
	{
	 ele =  $(id + ' > div:nth-child('+ (i+1) +')' + ' > div:nth-child(1) > b');
	   ele.attr('value',jsonData[i].groupStaDt);
	}
	else 
	{
	    ele =  $(id + ' > div:nth-child('+ (i+1) +')' + ' > div:nth-child(1) > div');
	   ele.attr('value',jsonData[i].end_time);
	   
	   ele =  $(id + ' > div:nth-child('+ (i+1) +')' + ' > div:nth-child(1) > a');
	   ele.attr('href',jsonData[i].url);
	}
	
	 ele =  $(id + ' > div:nth-child('+ (i+1) +')' + ' > div:nth-child(2) > div');
	if(id == '#group_tab_main_b0' || id ==  '#group_tab_main_b1')
	{
	 ele.attr('value',jsonData[i].groupStaDt);
	}
	 else
	   {
	       ele.attr('value',jsonData[i].end_time);
	   }
	   ele =  $(id + ' > div:nth-child('+ (i+1) +')' + ' > div:nth-child(2) > a');
	   ele.attr('href',jsonData[i].url);
	    str="<img src='"+jsonData[i].goods_thumb+"' width='165' height='198' />";
	   ele.empty();
	   ele.html(str);
		
	
	 ele =  $(id + ' > div:nth-child('+ (i+1) +')' + ' > div:nth-child(2) > .grouptab_textwrap > a');
	   ele.attr('href',jsonData[i].url);
	   ele.empty();	 
	  ele.append(jsonData[i].goods_name);
	  
	   ele =  $(id + ' > div:nth-child('+ (i+1) +')' + ' > div:nth-child(2) > .grouptab_jiagewrap');
	  str="<span class='price_1'><b>￥</b>"+jsonData[i].price_ladder[0].formated_price+"</span><span class='price_2'>"+jsonData[i].cur_amount+"人已购买</span>";
	   ele.empty();
	   ele.html(str);
	   
	   
	   ele =  $(id + ' > div:nth-child('+ (i+1) +')' + ' > div:nth-child(1) > div');
	    if(id == '#group_tab_main_b0' || id ==  '#group_tab_main_b1')
	   {
	     ele.attr('value',jsonData[i].groupStaDt);
	   }
	   else
	   {
	     ele.attr('value',jsonData[i].end_time);
	   }
	   ele =  $(id + ' > div:nth-child('+ (i+1) +')' + ' > div:nth-child(1) > a');
	   ele.attr('href',jsonData[i].url);
   
    };
	
}
</script>
