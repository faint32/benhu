   <script>
      function listform_onsubmit(sort,order)
	  {
	   $('#sort').val(sort);
	  var last_sort="{$pager.search.sort}";

	if(last_sort==sort) 
	{
     	order =  ( order =='DESC' ? 'ASC' : 'DESC');  
		}
		else
		{
		  order = 'ASC';
		}
		 $('#order').val(order);
		 $('#listform').submit();
	  }
   </script>
